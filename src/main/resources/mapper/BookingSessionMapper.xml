<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ds.ticketmaster.mapper.BookingSessionMapper">
  <resultMap id="BaseResultMap" type="com.ds.ticketmaster.entity.BookingSession">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="token" jdbcType="VARCHAR" property="token" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="event_id" jdbcType="VARCHAR" property="eventId" />
    <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
    <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
  </resultMap>
  
  <insert id="insert" parameterType="com.ds.ticketmaster.entity.BookingSession" useGeneratedKeys="true" keyProperty="id">
    insert into booking_sessions (token, user_id, event_id, created_at, updated_at)
    values (#{token,jdbcType=VARCHAR}, #{userId,jdbcType=BIGINT}, #{eventId,jdbcType=VARCHAR}, #{createdAt,jdbcType=TIMESTAMP}, #{updatedAt,jdbcType=TIMESTAMP})
  </insert>
</mapper>
